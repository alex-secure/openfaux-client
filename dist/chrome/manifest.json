{
  "manifest_version": 2,
  "name": "OpenFaux",
  "description": "Browser add-on for encrypting and masking internet traffic.",
  "version": "0.1.0",
  "icons": {
    "16": "media/icon-16.png",
    "48": "media/icon-48.png",
    "128": "media/icon-128.png"
  },
  "homepage_url": "https://github.com/openfaux/openfaux-client",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "OpenFaux",
    "default_icon": "media/icon-19.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      }
    }
  },
  "permissions": ["tabs", "http://*/*"]
}